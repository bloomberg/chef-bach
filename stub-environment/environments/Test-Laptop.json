{
  "name": "Test-Laptop",
  "override_attributes": {
    "bcpc": {
      "databag_overrides": {
        "configs": {
          "Test-Laptop": {
            "cobbler-root-password": "hadoopy"
          }
        }
      },
      "domain_name": "bcpc.example.com",
      "management": {
        "vip" : "10.0.100.5"
      },
      "floating": {
        "vip" : "192.168.100.5"
      },
      "networks": {
        "subnet1": {
          "management": {
            "vip" : "10.0.100.5",
            "interface" : "eth0",
            "netmask" : "255.255.255.0",
            "cidr" : "10.0.100.0/24",
            "gateway" : "10.0.100.3"
          },
          "storage": {
            "interface" : "eth1",
            "netmask" : "255.255.255.0",
            "cidr" : "172.16.100.0/24",
            "gateway" : "172.16.100.3"
          },
          "floating": {
            "vip" : "192.168.100.5",
            "interface" : "eth2",
            "netmask" : "255.255.255.0",
            "cidr" : "192.168.100.0/24",
            "gateway" : "192.168.100.3",
            "available_subnet" : "192.168.100.128/25"
          }
        }
      },
      "bootstrap": {
        "interface" : "eth0",
        "pxe_interface" : "eth1",
        "hostname" : "bcpc-bootstrap",
        "server" : "10.0.100.3",
        "dhcp_subnet" : "10.0.100.0",
        "dhcp_range" : "10.0.100.14 10.0.100.250",
        "preseed": {
          "additional_packages": [ "openssh-server",
                                   "lldpd",
                                   "virtualbox-guest-utils" ]
        }
      },
      "hadoop" : {
        "hbase": {
          "superusers": ["hbase", "ubuntu"]
        },
        "core": {
          "site_xml": {
            "hadoop.proxyuser.HTTP.hosts": "*",
            "hadoop.proxyuser.HTTP.users": "*"
           }
        },
        "yarn" : {
          "nodemanager": {
            "avail_memory": {
              "ratio": 0.85
            },
            "avail_vcpu": {
              "ratio": 2.0
            }
          },
          "resourcemanager" : {
            "yarn.client.failover-sleep-base-ms": 30000
          }
        },
        "hdfs" : {
          "dfs_replication_factor" : 1
        },
        "oozie": {
          "memory_opts": "-Xmx512m -XX:MaxPermSize=64m"
        }
      }
    },
    "ntp": {
       "servers" : [ "0.pool.ntp.org",
                     "1.pool.ntp.org",
                     "2.pool.ntp.org",
                     "3.pool.ntp.org" ]
    },
    "chef_client": {
      "server_url": "http://10.0.100.3:4000",
      "cache_path": "/var/chef/cache",
      "config": {
         "verify_api_cert": false,
         "ssl_verify_mode": "verify_none",
         "rubygems_url": "http://10.0.101.3/"
      },
      "backup_path": "/var/chef/backup",
      "validation_client_name": "chef-validator",
      "run_path": "/var/chef"
    }
  },
  "json_class": "Chef::Environment",
  "description": "Laptop test environment",
  "cookbook_versions": {
  },
  "chef_type": "environment"
}
